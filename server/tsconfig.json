{
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "strict": true,
    "allowJs": true,
    "outDir": "dist",
    "removeComments": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@constants": [
        "shared/constants"
      ],
      "@types": [
        "shared/types"
      ],
      "@interfaces": [
        "shared/interfaces"
      ],
      "@classes": [
        "shared/classes"
      ],
      "@singletons": [
        "shared/singletons"
      ],
      "@schemas": [
        "shared/schemas"
      ],
      "@utils": [
        "shared/utils"
      ],
    }
  }
}
